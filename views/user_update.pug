extends layout 

block content 
    form(action="", method="POST").login-form
        .login-right
            h1.header Credential Settings
            .inputs 
                .input-container 
                    input(type="text" id='firstName' name='firstName' required value=user.first_name placeholder=' ')
                    label(for="firstName") First Name 
                .input-container 
                    input(type="text" id='lastName' name='lastName' required value=user.last_name placeholder=' ')
                    label(for="lastName") Last Name 
                .input-container 
                    input(type="email" id='email' name='email' required value=user.email placeholder=' ')
                    label(for="email") Email 
                .input-container 
                    input(type="text" id='oldpassword' name='oldPassword' placeholder=' ')
                    label(for='oldpassword') Old Password
                .input-container 
                    input(type="text" id='password' name='password' placeholder=' ')
                    label(for='password') New Password
                .buttons-container
                    button Save
                    .admin-button 
                        a(href="/user/activate-admin") Activate Admin Mode
            if errors 
                for error in errors 
                    .error=error.msg