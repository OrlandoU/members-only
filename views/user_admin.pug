extends layout 

block content 
    form(action="", method="POST").login-form
        .login-right
            h1.header Admin Rights Activation
            .inputs 
                .input-container 
                    input(type="text" id='firstName' name='passcode' required placeholder=' ')
                    label(for="firstName") Admin Passcode 
                button Submit
            if errors 
                for error in errors 
                    .error=error.msg